<div class="text-center">
  <h1 class="myFont m-ms-3">
    <p>ログイン<br class="sma">画面</p>
  </h1>

  <div class="container">
    <div class="row">
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group mt-3 mb-3">
          <%= f.label :email, 'メールアドレス' %><br>
          <%= f.text_field :email  %>
        </div>
        <div class="form-group mt-3 mb-3">
          <%= f.label :password, 'パスワード' %><br>
          <%= f.password_field :password  %>  
        </div>
        <div class="form-group mt-3 mb-3">
          <%= f.submit "ログイン", class: 'btn btn-outline-primary' %> 
        </div>       
      <% end %>
      <div class="form-group mt-3 mb-3">
        <%= link_to t('.password_forget'), new_password_reset_path %>
      </div>
    </div>
  </div>
</div>